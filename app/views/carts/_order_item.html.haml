.well
  .row
    .col-sm-8
      %h3
        = image_tag(order_item.product.avatar)
      .col-sm-4 
        .pull-right 
          = form_for(order_item, remote: true) do |f|
            =f.hidden_field :product_id, value: order_item.product.id 
            %h4
              %strong
                = order_item.product.title
            %h5.price 
              = order_item.product.price
            .row
              .form-group.col-xs-6
                = f.text_field :quantity, value: order_item.quantity.to_i, min: 1, class: 'form-control'
              .btn-group.col-xs-6
                = f.submit "Update Quantity"
                = link_to "Delete", order_item, method: :delete, remote: true, class: 'btn btn-danger'
              %span
                %h5
                  Total Price: 
                  = order_item.total_price  
